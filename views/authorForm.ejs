<h1><%= title %></h1>

<form method="POST" action="">
  <div class="form-group">
    <label for="first_name">First Name:</label>
    <!-- prettier-ignore -->
    <input
      class="form-control"
      id="first_name"
      type="text"
      placeholder="First name (Christian)"
      name="first_name"
      required="true"
      value= <%= data ? data.first_name : ''; %>
    >
    <label for="family_name">Family Name:</label>
    <!-- prettier-ignore -->
    <input
      class="form-control"
      id="family_name"
      type="text"
      placeholder="Family name (Surname)"
      name="family_name"
      required="true"
      value= <%= data ? data.family_name : ''; %>
    >
  </div>
  <div class="form-group">
    <label for="date_of_birth">Date of birth:</label>
    <!-- prettier-ignore -->
    <input class="form-control" id="date_of_birth" type="date"
    name="date_of_birth" value= <%= data ? data.date_of_birth : ''; %>
    <label for="date_of_death">Date of death:</label>
    <!-- prettier-ignore -->
    <input class="form-control" id="date_of_death" type="date"
    name="date_of_death" value= <%= data ? data.date_of_death : ''; %>
  </div>
  <button class="btn btn-primary mt-3" type="submit">Submit</button>
</form>

<% if (error) { %>
<ul>
  <% error.forEach(function(err){%>
  <li><%= err.msg %></li>
</ul>
<% })}%>
