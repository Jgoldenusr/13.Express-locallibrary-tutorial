<h1><%= title + ": " + data.genre.name %></h1>

<% if(data.genreBooks.length) { %>
<p><strong>You need to delete the following books.</strong></p>
<div style="margin-left: 20px; margin-top: 20px">
  <h4>Books</h4>
  <dl>
    <% data.genreBooks.forEach(function(book){%>
    <!-- prettier-ignore -->
    <dt><a href= <%= book.url %>><%= book.title %></a></dt>
    <dd><%= book.summary %></dd>
    <% });%>
  </dl>
</div>
<%} else {%>
<p>Do you really want to delete this Genre?</p>
<form method="POST" action="">
  <div class="form-group">
    <!-- prettier-ignore -->
    <input
      class="form-control"
      id="genreid"
      type="hidden"
      name="genreid"
      required="true"
      value= <%= data.genre._id %>
    />
  </div>
  <button class="btn btn-primary" type="submit">Delete</button>
</form>
<%};%>
